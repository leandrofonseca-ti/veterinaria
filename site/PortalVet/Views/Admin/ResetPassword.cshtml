@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewBag.Title = "Login";
}

@section styles {
    <style>
        body { background-color: transparent !important; }
        html {
            /*background: url('Url.Content("~/Content/Images/bg-sohtec1.jpg")') no-repeat center center fixed;*/
            background: -webkit-gradient(linear, left top, right top, from(#000000), to(#0082c6)) no-repeat;
            background: -moz-linear-gradient(left, #000000, #0082c6);
            filter: progid:DXImageTransform.Microsoft.Gradient(GradientType=1, StartColorStr='#000000', EndColorStr='#0082c6');
            -webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
            background-size: cover;
        }
        .panel { background-color: rgba(255, 255, 255, 0.50) !important; }
        @@media (min-width: 1024px) {
            html {
                /*background: url('Url.Content("~/Content/Images/bg-sohtec1.jpg")') no-repeat center center fixed;*/
                background: -webkit-gradient(linear, left top, right top, from(#000000), to(#0082c6)) no-repeat;
                background: -moz-linear-gradient(left, #000000, #0082c6);
                filter: progid:DXImageTransform.Microsoft.Gradient(GradientType=1, StartColorStr='#000000', EndColorStr='#0082c6');
                -webkit-background-size: cover;
                -moz-background-size: cover;
                -o-background-size: cover;
                background-size: cover;
            }
        }
    </style>
}

<form class="sign-box reset-password-box">
    <div style="text-align:center; padding: 10px;">
        <img src="@Url.Content("~/Content/img/logo.png")" width="170" alt="">
    </div>
    <header class="sign-title"><small style="font-weight:bold">Recuperar senha</small></header>
    <div id="msg_feedback" style="display:none" class="form-error-text-block"></div>
    <div class="form-group">
        <input type="text" class="form-control" id="txtEmail" name="txtEmail" placeholder="E-mail" />
    </div>
    <button type="button" id="btnOK" name="btnOK" class="btn btn-rounded">Ok</button>
    ou <a href="@Url.Action("Index", "Admin")">Autenticação</a>
</form>

@section scripts {
    @Scripts.Render("~/Scripts/Admin.ResetPassword.js?t" + Guid.NewGuid())
}
