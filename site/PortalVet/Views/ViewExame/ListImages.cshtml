
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>:: Web Imagem ::</title>
    <link href="@Url.Content("~/content/bootstrap.min.css")" rel="stylesheet" id="bootstrap-css" />
    <script src="@Url.Content("~/content/js/lib/bootstrap/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/content/js/lib/jquery/jquery.min.js")"></script>
    <style>
        .thumbnail img {
            max-width: 100%;
            /* do not stretch the bootstrap column */
        }

        .img-wrapper {
            width: 100%;
            /* padding-bottom: 150%;
            /* your aspect ratio here! */
            position: relative;
        }

            .img-wrapper img {
                /*       position: absolute;*/
                /*top: 0;
                bottom: 0;
                left: 0;
                right: 0;*/
                /*  min-height: 100%;*/ /* optional: if you want the smallest images to fill the .thumbnail */
            }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                @{
                    var listArquivos = (List<string>)ViewBag.ListAqruivos;

                    var ct = 0;
                    var acc = 0;
                    foreach (var item in listArquivos)
                    {
                        acc++;
                        ct++;

                        if (ct == 1)
                        {
                            @Html.Raw("<div class='row'>");
                        }
                        <div class="col-md-4">
                            <div class="thumbnail">
                                <div class="img-wrapper">
                                    <img src="@item" />
                                </div>
                            </div>
                        </div>

                        if (ct == 3 || acc == listArquivos.Count)
                        {
                            @Html.Raw("</div>");
                            ct = 0;

                        }
                    }
                }


            </div>

        </div>
    </div>

</body>
</html>
