@model PortalVet.Data.Helper.VMHome
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section styles {

    <style>


        .error-field {
            border: 2px solid red;
        }

        .sizeComboText span.select2.select2-container.select2-container--default {
            max-width: 75% !important;
        }

        .trDisabled {
